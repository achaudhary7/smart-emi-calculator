# Smart EMI Calculator - Priority Configuration
DirectoryIndex index.html index.php

# ============================================================================
# LITESPEED CACHE CONTROL - DISABLE FOR HTML
# ============================================================================

# Disable LiteSpeed Cache for HTML files
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>

# Alternative: Set LiteSpeed cache control header
<IfModule mod_headers.c>
    <FilesMatch "\.html$">
        Header set X-LiteSpeed-Cache-Control "no-cache"
    </FilesMatch>
</IfModule>

# ============================================================================
# CACHE CONTROL - AGGRESSIVE SETTINGS
# ============================================================================

# Disable ETags (use Cache-Control instead)
FileETag None
Header unset ETag

<IfModule mod_headers.c>
    # HTML - No cache (always fetch fresh)
    <FilesMatch "\.html$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, private"
        Header set Pragma "no-cache"
        Header set Expires "Thu, 01 Jan 1970 00:00:00 GMT"
        Header set X-LiteSpeed-Cache-Control "no-cache"
    </FilesMatch>
    
    # Fonts - Cache for 1 year (immutable) - OVERRIDE any server defaults
    <FilesMatch "\.(woff2|woff|ttf|otf|eot)$">
        Header unset Pragma
        Header unset Expires
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header append Vary "Accept-Encoding"
    </FilesMatch>
</IfModule>

# Expires as fallback (mod_expires)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType font/opentype "access plus 1 year"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json
    AddOutputFilterByType DEFLATE font/woff2 font/woff application/font-woff2
</IfModule>

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress
